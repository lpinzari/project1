<h1>Showing selected Article</h1>

<p>
  Author: <%= link_to @article.user.username, user_path(@article.user) %><br>
  <%= pluralize(@article.user.articles.count, 'article') %>
</p>

<p>
  Title: <%= @article.title %>
</p>

<p>
  Description: <%= @article.description %>
</p>
<% if @current_user.present? && @current_user == @article.user %>
  <%= link_to "Edit this article", edit_article_path(@article) %>
  <%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: "Are you sure?"} %> |
<% end %>
<%= link_to "Back to articles listing", articles_path %>
