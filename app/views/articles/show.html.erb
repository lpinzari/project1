<h1>Showing selected Article</h1>

<p>
  <strong>Author:</strong> <%= link_to @article.user.username, user_path(@article.user) %><br>
  <%= pluralize(@article.user.articles.count, 'article') %>
</p>

<p>
  <strong>Title:</strong> <%= @article.title %>
</p>

<p>
  <strong>Description:</strong> <%= @article.description %>
</p>
<% if @article.categories.any? %>
    <p><strong>Categories:</strong> <%= render @article.categories %></p>
<% end %>
<% if @current_user.present? && (@current_user == @article.user || @current_user.admin?) %>
  <%= link_to "Edit this article", edit_article_path(@article) %>
  <%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: "Are you sure?"} %> |
<% end %>
<%= link_to "Back to articles listing", articles_path %>
