<h1>All Agora's Bloggers</h1>

<% @users.each do |user| %>
 <p><%= link_to user.username, user_path(user) %></p>
 <ul>
   <li><%= user.email %></li>
   <li><%= pluralize(user.articles.count, 'article') if user.articles %></li>
   <% if @current_user.present? && @current_user.admin? %>
     <li><%= link_to "Delete this user", user_path(user), method: :delete, data: {confirm: "Are you sure?"} %></li>
   <% end %>
 </ul>

<% end %>
